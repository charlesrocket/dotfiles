#!/bin/sh
# Toggle low power mode

bar=$(pgrep -l eww)

if [ "$1" = 0 ]; then
	STATUS="disabled"
	if test -z "${bar}"; then
		eww open bar
	fi

	hyprctl keyword animations:enabled true --quiet
	hyprctl keyword decoration:blur:enabled true --quiet
	hyprctl keyword decoration:shadow:enabled true --quiet
elif [ "$1" = 1 ]; then
	STATUS="enabled"
	pkill eww
	hyprctl keyword animations:enabled false --quiet
	hyprctl keyword decoration:blur:enabled false --quiet
	hyprctl keyword decoration:shadow:enabled false --quiet
else
	echo "Expected '0' or '1'"
	exit 1
fi

printf """\033[93;40;1mL O W P O W E R\
\033[91;1m - \033[93;40;1mM O D E\033[36;1m . \
\033[37m%s\033[0m\n" "${STATUS}"
